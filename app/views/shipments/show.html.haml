= render partial: "shared/search_navbar", locals: {title: "#{@shipment['TICKET_NBR']}"}
.jumbotron{style: 'background-color: white;'}
  .container
    %div.row
      .col-xs-12.col-sm-12.col-md-6.col-md-offset-3
        =# image_tag(show_jpeg_image_shipment_path(@shipment), alt: @shipment.id, class: 'thumbnail img-responsive')
        = link_to image_tag(show_jpeg_image_shipment_path(@shipment['CAPTURE_SEQ_NBR'], yard_id: @shipment['YARDID']), alt: @shipment['CAPTURE_SEQ_NBR'], class: 'img-responsive'), "#shipment_popup", "data-toggle" => "modal", :alt => "Shipment", :class => 'thumbnail'
    %div{:id => "shipment_popup", :class => "modal fade", :tabindex => "-1", :style => "display:none;"}
      .modal-dialog.modal-lg
        .modal-content
          .modal-body
            =# image_tag(show_jpeg_image_shipment_path(@shipment), alt: @shipment.id, class: 'img-responsive')
            = image_tag(show_jpeg_image_shipment_path(@shipment['CAPTURE_SEQ_NBR'], yard_id: @shipment['YARDID']), alt: @shipment['CAPTURE_SEQ_NBR'], class: 'img-responsive')
    %div.row
      .col-xs-12.col-sm-12.col-md-6.col-md-offset-3
        %div.panel.panel-primary
          %div.list_group
            -#
              %div.list-group-item
                %strong= "Ticket:"
                .pull-right
                  = "#{@shipment['TICKET_NBR']}"
            - unless @shipment['EVENT_CODE'].blank?
              %div.list-group-item
                %strong= "Event:"
                .pull-right
                  = "#{@shipment['EVENT_CODE']}"
            -#
              - unless @shipment.cust_name.blank?
                %div.list-group-item
                  %strong= "Customer:"
                  .pull-right
                    = "#{@shipment['CUST_NAME']}"
              - unless @shipment.container_nbr.blank?
                %div.list-group-item
                  %strong= "Container:"
                  .pull-right
                    = "#{@shipment.container_nbr}"
              - unless @shipment.booking_nbr.blank?
                %div.list-group-item
                  %strong= "Booking:"
                  .pull-right
                    = "#{@shipment.booking_nbr}"
              - unless @shipment.contr_nbr.blank?
                %div.list-group-item
                  %strong= "Contract:"
                  .pull-right
                    = "#{@shipment.contr_nbr}"
            - unless @shipment['CAMERA_NAME'].blank?
              %div.list-group-item
                %strong= "Camera:"
                .pull-right
                  = "#{@shipment['CAMERA_NAME']}"
            %div.list-group-item
              %strong= "Date/Time:"
              .pull-right
                = "#{@shipment['SYS_DATE_TIME']}"
            - if @shipment['HIDDEN'] == '1'
              %div.list-group-item
                %strong= "Hidden:"
                .pull-right
                  Yes
    -#        
      %div.row
        .text-center
          .col-xs-12.col-sm-6.col-md-offset-3
            %p= link_to 'New Shipment', '#', :class => 'btn btn-primary btn-lg btn-block'

= render partial: "shared/footer_navbar", locals: {title: "Shipments"}