- if @today == true
  = render partial: "shared/navbars/shipments_navbar", locals: {title: Date.today.strftime("%-m/%-d/%y")}
- else
  = render partial: "shared/navbars/shipments_navbar", locals: {title: "#{@ticket_number.blank? ? 'Search' : @ticket_number}"}

.container
  %br
  %br
  - if @shipments.blank?
    .jumbotron
      %p.text-center No results found
  %div{id: "shipments"}
    - @shipments.each_slice(6) do |shipments|
      %div.row
        - shipments.each do |shipment|
          .col-xs-12.col-sm-2.col-md-2
            %div.panel.panel-primary
              %div.list_group
                - unless @today == true or params[:q].blank? or @ticket_number.blank?
                  %a{href: shipment_path(shipment), class: "list-group-item"}
                    - unless shipment.hidden? or not current_user.show_thumbnails?
                      = image_tag(show_preview_image_shipment_path(shipment), alt: shipment.id, class: 'thumbnail img-responsive')
                    = shipment.ticket_nbr
                    .pull-right
                      %i.fa.fa-chevron-right
                    - unless shipment.event_code.blank?
                      %br/
                      %small= shipment.event_code
                    - unless shipment.camera_name.blank?
                      %br/
                      %small= shipment.camera_name
                    %br/
                    %small.text-muted= shipment.sys_date_time.strftime("%-m/%-d/%y %l:%M %p")
                - else
                  %a{href: shipments_path("q[ticket_nbr_eq]" => shipment.ticket_nbr, "q[yardid_eq]" => current_yard_id), class: "list-group-item"}
                    - unless shipment.hidden? or not current_user.show_thumbnails?
                      = image_tag(show_preview_image_shipment_path(shipment), alt: shipment.id, class: 'thumbnail img-responsive')
                    = shipment.ticket_nbr
                    .pull-right
                      %i.fa.fa-chevron-right
                    -#
                      - unless shipment.event_code.blank?
                        %br/
                        %small= shipment.event_code
                      - unless shipment.camera_name.blank?
                        %br/
                        %small= shipment.camera_name
                    %br/
                    %small.text-muted= shipment.sys_date_time.strftime("%-m/%-d/%y %l:%M %p")
  .row
    .text-center
      %div{id: 'endless_page'}
        %p= image_tag("ajax-loader.gif", :id => "more_images_spinner", :alt => "Loading ...", style: "display:none;")
        %p= link_to 'Load more ...', shipments_path(:page => @shipments.next_page, :q => params[:q], :one_shipment_per_ticket => params[:one_shipment_per_ticket]), :class => 'load-more-shipments btn btn-default', :remote => true, :onclick => "$(this).hide(); $('#more_images_spinner').show();" if @shipments.next_page
  =# paginate @shipments
  
= render partial: "shared/shipment_footer_navbar", locals: {title: "Shipments"}
