=# render partial: "shared/navbars/no_user_navbar", locals: {title: "Log In"}
.jumbotron{style: 'background-color: white;'}
  .container
    =# image_tag('dragon_dog_logo_529x214.png', alt: 'dragon_dog_logo_529x214.png', class: 'img-responsive center-block')
    %p= link_to image_tag('sd_portal_transparent_small.png', alt: 'sd_portal_transparent_small.png', class: 'img-responsive center-block'), root_path
    .well.col-sm-6.col-md-4.col-md-offset-4
      = form_tag sessions_path, class: 'form-horizontal' do
        .row.form-group
          %div{:class => "col-sm-12 col-md-12"}
            = text_field_tag :username, nil, :placeholder => "Username or Email", :class => "form-control input-lg", autofocus: true
        .row.form-group
          %div{:class => "col-sm-12 col-md-12"}
            - unless params[:customer_guid].blank?
              =# password_field_tag :password, params[:customer_guid], :placeholder => "Password", :class => "form-control input-lg"
              = hidden_field_tag :password, params[:customer_guid]
              = hidden_field_tag :customer_needs_to_change_password, true
            - else
              = password_field_tag :password, nil, :placeholder => "Password", :class => "form-control input-lg"
        .row.form-group
          %div{:class => "col-sm-12 col-md-12"}
            = text_field_tag :dragon_account_number, cookies[:dragon_account_number], :placeholder => "Account (leave blank if unknown)", :class => "form-control input-lg"
        .row
          %div{:class => "col-sm-12 col-md-12"}
            - unless params[:customer_guid].blank?
              = button_tag(:type => 'submit', :class => 'btn btn-block btn-lg btn-primary', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sign In"}) do
                Create Password
            - else
              = button_tag(:type => 'submit', :class => 'btn btn-block btn-lg btn-primary', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sign In"}) do
                Log In
      - if params[:customer_guid].blank?
        %br
        %p= link_to 'Sign Up', signup_path
        %p= link_to "Didn't receive confirmation instructions?", resend_confirmation_instructions_users_path
        %p= link_to "Forgot password?", new_password_reset_path