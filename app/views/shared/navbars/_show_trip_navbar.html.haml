.navbar.navbar-default.navbar-fixed-top{ role: 'navigation'}
  .container-fluid
    .navbar-header
      %div{class: 'navbar-brand navbar-center'}
        .col-xs-4.col-sm-4
          %div{class: "#{mobile_device? ? 'pull-left' : ''}"}
            %a{href: search_trips_path, data: {disable_with: "<i class='fa fa-spinner fa-lg fa-spin'></i> Trips"}, class: 'trip_button'}
              %i.fa.fa-chevron-left
              Trips
        .col-xs-4.col-sm-4
          - unless mobile_device?
            = title
          - else
            = truncate(title, length: 8)
        .col-xs-4.col-sm-4
          -#
            - if current_user.admin?
              %a{href: edit_trip_path(@trip['Id']), data: {disable_with: "<i class='fa fa-spinner fa-lg fa-spin'></i>"}, class: 'customer_button'}
                - unless mobile_device?
                  = "Edit"
                - else
                  .pull-right Edit