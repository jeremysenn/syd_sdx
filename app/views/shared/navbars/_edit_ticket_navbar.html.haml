.navbar.navbar-default.navbar-fixed-top{ role: 'navigation'}
  .container-fluid
    .navbar-header
      %div{class: 'navbar-brand navbar-center'}
        .col-xs-4.col-sm-4
          %div{class: "#{mobile_device? ? 'pull-left' : ''}"}
            - unless @ticket["TicketItemCollection"].blank?
              = link_to 'javascript:history.back()' do
                Cancel
            - else
              = link_to '<i class="fa fa-warning"></i> Void'.html_safe, ticket_path(@ticket['Id'], ticket: @ticket, status: @ticket['Status']), :method => :delete, :data => { :confirm => 'Are you sure you want to void this ticket?', disable_with: "<i class='fa fa-spinner fa-spin'></i> Void" }, class: 'text-danger'
        .col-xs-4.col-sm-4
          - unless mobile_device?
            - if @ticket['Status'] == '2' or @ticket['Status'].blank?
              %i.fa.fa-folder-open-o.fa-lg
            - elsif @ticket['Status'] == '1'
              %i.fa.fa-folder.fa-lg
            - elsif @ticket['Status'] == '3'
          = title
        .col-xs-4.col-sm-4
          %div{class: "#{mobile_device? ? 'pull-right' : ''}"}
            - unless total.blank?
              #total= total