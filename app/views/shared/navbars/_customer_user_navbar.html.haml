.navbar.navbar-default.navbar-fixed-top{ role: 'navigation'}
  .container-fluid
    .navbar-header
      %button.navbar-toggle{ type: 'button', data: { toggle: 'collapse', target: '.navbar-collapse' } }
        %span.sr-only= t('.toggle_navigation')
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a{class: 'navbar-brand', :href => root_path}
        = current_user.company.name
        =# image_tag('syd_logo_20x37.png')
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        -#
          %li
            %a{href: images_path}
              PICTURES
        %li.dropdown{:class => "#{(params[:controller] == 'tickets') ? 'active' : ''}"}
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            TICKETS
            %b.caret
          %ul.dropdown-menu
            %li{:class => "#{(params[:controller] == 'tickets') and (params[:status] == '1')}"}
              %a{href: tickets_path(status: 1)}
                %i.fa.fa-folder
                Closed
            %li{:class => "#{(params[:controller] == 'tickets') and (params[:status] == '3')}"}
              %a{href: tickets_path(status: 3)}
                %i.fa.fa-dollar
                Paid
        %li
          %a{href: reports_path(type: 'customer_summary')}
            %i.fa.fa-file-text
            Reports
          
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown{:class => "#{(params[:controller] == 'users') ? 'active' : ''}"}
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            %i.fa.fa-gear
            Settings
            %b.caret
          %ul.dropdown-menu
            %li.navbar-text= "Yard: <strong>#{current_yard_name}</strong>".html_safe
            %li{:class => "#{(params[:controller] == 'users') ? 'active' : ''}"}= link_to "User: <strong>#{current_user.username}</strong>".html_safe, current_user
        %li= link_to 'Log out', logout_path, method: :delete, data: { confirm: 'Are you sure you want to log out?' }