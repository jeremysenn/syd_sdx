.navbar.navbar-inverse.navbar-fixed-top{ role: 'navigation'}
  .container-fluid
    .navbar-header
      %button.navbar-toggle{ type: 'button', data: { toggle: 'collapse', target: '.navbar-collapse' } }
        %span.sr-only= t('.toggle_navigation')
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      -# %a{class: 'navbar-brand', :href => reports_path}
      -# %a{class: 'navbar-brand', :href => tickets_reports_path}
      %a{class: 'navbar-brand', :href => root_path}
        = image_tag('dragon_spiral_navbar_logo.png')
        -# Home
        =# image_tag('syd_logo_20x37.png')
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        -#
          - if current_user.tickets?
            %li
              %a{href: customer_index_commodities_path}
                COMMODITIES
        %li.dropdown{:class => "#{(params[:controller] == 'reports') ? 'active' : ''}"}
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            REPORTS
            %b.caret
          %ul.dropdown-menu
            - if current_user.company.include_shipments? and current_user.shipments?
              %li{:class => "#{(params[:controller] == 'reports') and (params[:action] == 'shipments') ? 'active' : ''}"}= link_to 'Shipments', shipments_reports_path
            - if current_user.tickets?
              %li{:class => "#{(params[:controller] == 'reports') and (params[:action] == 'tickets') ? 'active' : ''}"}= link_to 'Tickets', tickets_reports_path
        - if current_user.dispatch?
          %li
            %a{href: service_requests_customers_path}
              SERVICE REQUESTS

      %ul.nav.navbar-nav.navbar-right
        %li.dropdown{:class => "#{(params[:controller] == 'users') ? 'active' : ''}"}
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            %i.fa.fa-gear
            Settings
            %b.caret
          %ul.dropdown-menu
            %li.navbar-text= "Yard: <strong>#{current_yard_name}</strong>".html_safe
            %li{:class => "#{(params[:controller] == 'users') ? 'active' : ''}"}= link_to "User: <strong>#{current_user.username}</strong>".html_safe, current_user
        %li= link_to 'Log out', logout_path, method: :delete, data: { confirm: 'Are you sure you want to log out?' }