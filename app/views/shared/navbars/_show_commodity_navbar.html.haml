.navbar.navbar-default.navbar-fixed-top{ role: 'navigation'}
  .container-fluid
    .navbar-header
      %div{class: 'navbar-brand navbar-center'}
        .col-xs-4.col-sm-4
          -#
            = link_to 'javascript:history.back()' do
              Back
          %a{href: 'javascript:history.back()'}
            %i.fa.fa-angle-left.fa-lg
            Commodities
          =# link_to 'Commodities', commodities_path
        .col-xs-4.col-sm-4
          - unless mobile_device?
            = title
          - else
            = truncate(title, length: 8)
        .col-xs-4.col-sm-4
          - if current_user.admin?
            %a{href: edit_commodity_path(@commodity["Id"]), class: 'commodity_button', data: {disable_with: "<i class='fa fa-spinner fa-spin fa-lg'></i>"}}
              -#
                %i.fa.fa-edit.fa-lg
              = "Edit"
