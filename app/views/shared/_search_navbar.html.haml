.navbar.navbar-default.navbar-fixed-top{ role: 'navigation'}
  .container-fluid
    .navbar-header
      %div{class: 'navbar-brand navbar-center'}
        .col-xs-4.col-sm-4
          = link_to root_path do
            Back
        .col-xs-4.col-sm-4
          = title
        .col-xs-4.col-sm-4
          - if (params[:controller]=='images' or params[:controller]=='shipments') and params[:action]=='index'
            %a{href: "#search_form", "data-toggle" => "modal", :alt => "search_form"}
              %i.fa.fa-search.fa-lg
              = "Search" unless mobile_device?

- unless current_user.blank?
  = render partial: "#{current_user.user_setting.table_name}/search_modal"