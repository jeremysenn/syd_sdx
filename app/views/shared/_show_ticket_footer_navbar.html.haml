.navbar.navbar-default.navbar-fixed-bottom{ role: 'navigation'}
  .container-fluid
    .navbar-header
      %div{class: 'navbar-brand navbar-center'}
        .col-xs-4.col-sm-4
          -#
            %a{href: root_path}
              %i.fa.fa-home.fa-lg
              = "Home" unless mobile_device?
        .col-xs-4.col-sm-4
          %a{href: "#upload_form", id: 'picture_upload_modal_link', "data-toggle" => "modal", :alt => "new_image_file_form"}
            %i.fa.fa-camera.fa-lg
            = "Picture" unless mobile_device?
        .col-xs-4.col-sm-4
          %a{href: ticket_path(@ticket['Id'], status: @ticket['Status'], now: DateTime.now, format: 'pdf'), target: '_blank'}
            %i.fa.fa-file-pdf-o.fa-lg
            = "Print" unless mobile_device?

= render partial: "image_files/upload_modal"