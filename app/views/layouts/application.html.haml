!!!
%html
  %head
    %title
      = @title || "SYD SDX"
    = favicon_link_tag 'favicon.ico'

    %meta{ charset: 'utf-8' }
    %meta{ name: 'viewport', id: 'viewport', content: "width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" }
    %meta{ content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible' }
    %meta{ name: "apple-mobile-web-app-capable", content: "yes"}

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-50608584-2', 'auto');
      ga('send', 'pageview');

  %body
    - if not logged_in?
      =# render partial: "shared/navbars/no_user_navbar", locals: {title: "Home"} unless current_page?(signup_path)
    - else
      - unless current_yard_id.blank?
        - if current_user.admin?
          = render partial: "shared/navbars/base_navbar", locals: {title: "Home"}
        - elsif current_user.basic?
          = render partial: "shared/navbars/basic_user_navbar", locals: {title: "Home"}
        - elsif current_user.customer?
          = render partial: "shared/navbars/customer_user_navbar", locals: {title: "Home"}
    - if logged_in?
      - flash.each do |message_type, message|
        %br
        = content_tag(:div, message, class: "alert alert-#{message_type}") do 
          = message
          = content_tag(:button, 'x', class: "close", data: { dismiss: 'alert' })
    - else
      - if not current_page? root_path
        - flash.each do |message_type, message|
          %br
          = content_tag(:div, message, class: "alert alert-#{message_type}") do 
            = message
            = content_tag(:button, 'x', class: "close", data: { dismiss: 'alert' })
    = yield
    - if not logged_in? and current_page? root_path
      = render 'shared/footer'