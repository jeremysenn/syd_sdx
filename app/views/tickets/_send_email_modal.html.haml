%div{:id => "ticket_#{ticket['Id']}_email_modal", :class => "modal fade", :tabindex => "-1", :style => "display:none;"}
  .modal-dialog
    .modal-content
      .modal-header
        Email Ticket Details
        = link_to "Ã—", '#', :class => "close", "data-dismiss" => "modal"
      .modal-body
        = form_tag email_ticket_path(ticket['Id']), method: 'get' do |f|
          = label_tag "Recipients", nil, :class => 'control-label'
          = text_field_tag :recipients, nil, {:placeholder => "Recipients", class: "form-control input-lg", required: true}
          %small.help-block Separate email addresses by comma
          .modal-footer
            %button.btn.btn-default.btn-lg{"data-dismiss" => "modal", :type => "button"} Cancel
            = button_tag(name: 'send_email', :type => 'submit', :class => 'btn btn-primary btn-lg', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Send"}, autocomplete: "off") do
              %i.fa.fa-send
              Send