= render partial: "shared/navbars/show_image_navbar", locals: {title: ""}

.jumbotron{style: 'background-color: #FFFFFF;'}
  .container
    %div.row
      .col-xs-12.col-sm-12.col-md-6.col-md-offset-3
        - unless @cust_pic['content_type'].start_with? 'image'
          %p.lead.text-center
            - if @cust_pic['content_type'] == "application/pdf"
              %i.fa.fa-file-pdf-o.fa-lg
            - else
              %i.fa.fa-file.fa-lg
            %a{href: CustPic.uri(@cust_pic['azure_url'], current_user.company)}
              Download File
        - else
          =# link_to image_tag(show_jpeg_image_cust_pic_path(@cust_pic['CAPTURE_SEQ_NBR']), alt: @cust_pic['CAPTURE_SEQ_NBR'], class: 'img-responsive center-block'), "#image_popup", "data-toggle" => "modal", :alt => "Image", :class => 'thumbnail'
          = image_tag(CustPic.uri(@cust_pic['azure_url'], current_user.company), alt: @cust_pic['capture_seq_nbr'], class: 'img-responsive')
        -#
          - unless @cust_pic.pdf?
            = link_to image_tag(@cust_pic.jpeg_image_data_uri, alt: @cust_pic.id, class: 'img-responsive'), "#image_popup", "data-toggle" => "modal", :alt => "Image", :class => 'thumbnail'
          - else
            %p.lead.text-center
              %a{href: send_pdf_data_cust_pic_path(@cust_pic)}
                %i.fa.fa-file-pdf-o.fa-lg
                Download PDF
    -#
      %div{:id => "image_popup", :class => "modal fade", :tabindex => "-1", :style => "display:none;"}
        .modal-dialog.modal-lg
          .modal-content
            .modal-body
              =# image_tag(show_jpeg_image_cust_pic_path(@cust_pic), alt: @cust_pic.id, class: 'img-responsive')
              =# image_tag(@cust_pic.jpeg_image_data_uri, alt: @cust_pic.id, class: 'img-responsive')
              = image_tag(show_jpeg_image_cust_pic_path(@cust_pic['CAPTURE_SEQ_NBR']), alt: @cust_pic['CAPTURE_SEQ_NBR'], class: 'img-responsive')
    %div.row
      .col-xs-12.col-sm-12.col-md-6.col-md-offset-3
        %p
          %div.panel.panel-primary
            %div.list_group
              - unless @cust_pic['event_code'].blank?
                %div.list-group-item
                  %strong= "Event:"
                  .pull-right
                    = "#{@cust_pic['event_code']}"
              %div.list-group-item
                %strong= "Date/Time:"
                .pull-right
                  =# "#{@cust_pic.sys_date_time.strftime("%-m/%-d/%y %l:%M %p")}"
                  = "#{@cust_pic['sys_date_time']}"

= render partial: "shared/footer_navbar", locals: {title: "Cust Pics"}