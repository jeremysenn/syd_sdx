= render partial: "shared/navbars/show_container_navbar", locals: {title: "#{@container['UserDispatchContainerNumber']}"}
@title="Container #{@container['UserDispatchContainerNumber']}"

.jumbotron{style: 'background-color: #FFFFFF;'}
  .container  
    %div.row
      .col-xs-12.col-sm-12.col-md-6.col-md-offset-3
        - unless @container.blank?
          .panel.panel-default
            .panel-heading
              %i.fa.fa-cube
              = @container['UserDispatchContainerNumber']
            .panel-body
              - unless @container['TagNumber'].blank?
                = @container['TagNumber']
                %br
              - unless @container['WorkOrderNumber'].blank?
                = @container['WorkOrderNumber']
                %br
              - unless @container['Description'].blank?
                = @container['Description']
                %br
              - unless (@container['Latitude'].blank? or @container['Longitude'].blank?) or (@container['Latitude'] == '0' or @container['Longitude'] == '0')
                .embed-responsive.embed-responsive-16by9
                  %iframe{:allowfullscreen => "", :frameborder => "0", :src => Image.google_map("#{@container['Latitude']}, #{@container['Longitude']}"), :style => "border:0"}
            - unless (@container['Latitude'].blank? or @container['Longitude'].blank?) or (@container['Latitude'] == '0' or @container['Longitude'] == '0')
              .panel-footer
                = "Latitude: #{@container['Latitude']}°, Longitude: #{@container['Longitude']}°"
        - else
          %p Not found
    %div.row
      .col-xs-12.col-sm-12.col-md-6.col-md-offset-3
        %hr
        - @images.each_slice(3) do |images|
          .row
            - images.each do |image|
              .col-xs-12.col-sm-4.col-md-4
                %a{href: image_path(image['CAPTURE_SEQ_NBR']), class: 'thumbnail'}
                  = image_tag(show_preview_image_image_path(image['CAPTURE_SEQ_NBR']), alt: image['CAPTURE_SEQ_NBR'], class: 'img-responsive')
                -#
                  .text-center
                    %small.text-muted= image['EVENT_CODE']

