.jumbotron{style: 'background: white;'}
  .container
    .col-sm-6.col-md-6.col-md-offset-3
      %p.lead Resend confirmation instructions
      = form_tag resend_confirmation_instructions_users_path, :method => 'get', :class => "form-horizontal" do
        %div.form-group.has-feedback{:class => "col-xs-8"}
          = label_tag "Email Address", nil, :class => 'control-label'
          = text_field_tag :email, nil, :placeholder => "Email address", class: "form-control input-lg"
        %div.form-group.has-feedback{:class => "col-xs-8"}
          = button_tag(:type => 'submit', :class => 'btn btn-primary btn-lg', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Resend"}) do
            Resend