.container
  = image_tag('dragon_dog_logo_402x206.png', alt: 'dragon_dog_logo_402x206.png', class: 'img-responsive center-block')
  .well
    = form_for @user do |f|
      - @user.errors.each do |attr, msg|
        .alert.alert-danger
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          = "#{attr} #{msg}" if @user.errors[attr].first == msg
      = f.hidden_field :role, value: 'admin'
      .row.form-group
        %div{:class => "col-sm-6"}
          = f.label :first_name, :class => "control-label"
          %br/
          = f.text_field :first_name, :class => "form-control input-lg", placeholder: "First Name", :autofocus => true
        %div{:class => "col-sm-6"}
          = f.label :last_name, :class => "control-label"
          %br/
          = f.text_field :last_name, :class => "form-control input-lg", placeholder: "Last Name"
      .row.form-group
        %div{:class => "col-sm-6"}
          = f.label :company_name, :class => "control-label"
          %br/
          = f.text_field :company_name, :class => "form-control input-lg", placeholder: "Company Name"
        %div{:class => "col-sm-6"}
          = f.label :email, :class => "control-label"
          %br/
          = f.text_field :email, :class => "form-control input-lg", placeholder: "Email"
      .row.form-group
        %div{:class => "col-sm-6"}
          = f.label :username, :class => "control-label"
          %br/
          = f.text_field :username, :class => "form-control input-lg", placeholder: "Username"
        %div{:class => "col-sm-6"}
          = f.label :password, :class => "control-label"
          %br/
          = f.password_field :password, :class => "form-control input-lg", placeholder: "Password"
      .row.form-group
        %div{:class => "col-sm-6"}
          = f.label :phone, :class => "control-label"
          %br/
          = f.text_field :phone, :class => "form-control input-lg", placeholder: "Phone"
      .row.form-group
        %div{:class => "col-sm-6"}
          = f.label :address1, :class => "control-label"
          %br/
          = f.text_field :address1, :class => "form-control input-lg", placeholder: "Address 1"
        %div{:class => "col-sm-6"}
          = f.label :address2, :class => "control-label"
          %br/
          = f.text_field :address2, :class => "form-control input-lg", placeholder: "Address 2"
      .row.form-group
        %div{:class => "col-sm-6"}
          = f.label :city, :class => "control-label"
          %br/
          = f.text_field :city, :class => "form-control input-lg", placeholder: "City"
        %div{:class => "col-sm-6"}
          = f.label :state, :class => "control-label"
          %br/
          = f.text_field :state, :class => "form-control input-lg", placeholder: "State"
        -#
          %div{:class => "col-sm-6"}
            = f.label :password_confirmation, :class => "control-label"
            %br/
            = f.password_field :password_confirmation, :class => "form-control input-lg", placeholder: "Password Confirmation"
      -#
        .row.form-group
          %div{:class => "col-sm-12 col-md-12"}
            = label_tag "User Type", nil, :class => 'control-label'
            .btn-group-horizontal{"data-toggle" => "buttons"}
              %label.btn.btn-lg.btn-default
                =# radio_button_tag :role, 'admin'
                = f.radio_button :role, 'admin'
                I'm a Scrap Yard Company
              %label.btn.btn-lg.btn-default
                =# radio_button_tag :role, 'customer'
                = f.radio_button :role, 'customer'
                I sell to Scrap Yards
      -#
        .row.form-group
          %div{:class => "col-sm-12 col-md-12"}
            = label_tag "Tickets per Month", nil, :class => 'control-label'
            .btn-group-horizontal{"data-toggle" => "buttons"}
              %label.btn.btn-lg.btn-default{class: 'active'}
                = radio_button_tag :tickets_per_month, '1000'
                1000
              %label.btn.btn-lg.btn-default
                = radio_button_tag :tickets_per_month, '2500'
                2500
              %label.btn.btn-lg.btn-default
                = radio_button_tag :tickets_per_month, '5000'
                5000
              %label.btn.btn-lg.btn-default
                = radio_button_tag :tickets_per_month, '10000'
                10000

      .row.form-group
        %div{:class => ".col-sm-6 col-md-4 col-md-offset-4"}
          = f.submit "Sign Up", :class => "btn btn-lg btn-primary btn-block", data: { disable_with: "Please wait ..." }