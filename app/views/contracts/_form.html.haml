= form_for @contract do |f|
  - @contract.errors.each do |attr, msg|
    .alert.alert-danger
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      = "#{attr} #{msg}" if @contract.errors[attr].first == msg
  = f.hidden_field :contract_id, value: current_yard_id
  .well
    .row.form-group
      %div{:class => "col-sm-12"}
        = f.label :contract_name, :class => "control-label"
        = f.text_field :contract_name, :placeholder => "Contract Name", class: "form-control input-lg"
    .row.form-group
      %div{:class => "col-sm-12"}
        = f.label :text1, :class => "control-label"
        = f.text_area :text1, :placeholder => "Text 1", rows: 3, class: "form-control input-lg"
    .row.form-group
      %div{:class => "col-sm-12"}
        = f.label :text2, :class => "control-label"
        = f.text_area :text2, :placeholder => "Text 2", rows: 3, class: "form-control input-lg"
    .row.form-group
      %div{:class => "col-sm-12"}
        = f.label :text3, :class => "control-label"
        = f.text_area :text3, :placeholder => "Text 3", rows: 3, class: "form-control input-lg"
    .row.form-group
      %div{:class => "col-sm-12"}
        = f.label :text4, :class => "control-label"
        = f.text_area :text4, :placeholder => "Text 4", rows: 3, class: "form-control input-lg"
    .row.form-group
      %div{:class => "col-sm-12"}
        = button_tag(:type => 'submit', :class => 'btn btn-primary btn-lg btn-block', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Save"}) do
          Save