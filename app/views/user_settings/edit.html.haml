= render partial: "shared/navbars/edit_user_setting_navbar", locals: {title: "Settings"}

.container
  .col-sm-6.col-md-4.col-md-offset-4
    = form_for @user_setting, :class => "form-inline" do |f|
      - if @user_setting.errors.any?
        #error_explanation
          %h2= "#{pluralize(@user_setting.errors.count, "error")} prohibited this user_setting from being saved:"
          %ul
            - @user_setting.errors.full_messages.each do |msg|
              %li= msg
      %div.panel.panel-default
        %div.panel-heading
          Show Thumbnails
        %ul.list-group
          %li.list-group-item
            .row.form-group
              %div{:class => "col-sm-10"}
                = f.label "Vendors", :class => "control-label"
                .pull-right= f.text_field :show_vendor_thumbnails, :value => "#{@user_setting.show_vendor_thumbnails? ? '1' : '0'}", "data-icon-checked" => "<i class='fa fa-check'></i>", "data-toggle" => "checkbox-x", "data-three-state" => "false", "data-size" => "xl"

          %li.list-group-item
            .row.form-group
              %div{:class => "col-sm-10"}
                = f.label "Open Tickets", :class => "control-label"
                .pull-right= f.text_field :show_purchase_order_thumbnails, :value => "#{@user_setting.show_purchase_order_thumbnails? ? '1' : '0'}", "data-icon-checked" => "<i class='fa fa-check'></i>", "data-toggle" => "checkbox-x", "data-three-state" => "false", "data-size" => "xl"

          %li.list-group-item
            .row.form-group
              %div{:class => "col-sm-10"}
                = f.label "Closed Tickets", :class => "control-label"
                .pull-right= f.text_field :show_bill_thumbnails, :value => "#{@user_setting.show_bill_thumbnails? ? '1' : '0'}", "data-icon-checked" => "<i class='fa fa-check'></i>", "data-toggle" => "checkbox-x", "data-three-state" => "false", "data-size" => "xl"
  
          %li.list-group-item
            .row.form-group
              %div{:class => "col-sm-10"}
                = f.label "Paid Tickets", :class => "control-label"
                .pull-right= f.text_field :show_bill_payment_thumbnails, :value => "#{@user_setting.show_bill_payment_thumbnails? ? '1' : '0'}", "data-icon-checked" => "<i class='fa fa-check'></i>", "data-toggle" => "checkbox-x", "data-three-state" => "false", "data-size" => "xl"

          %li.list-group-item
            .row.form-group
              %div{:class => "col-sm-10"}
                = f.label "Pictures", :class => "control-label"
                .pull-right= f.text_field :show_thumbnails, :value => "#{@user_setting.show_thumbnails? ? '1' : '0'}", "data-icon-checked" => "<i class='fa fa-check'></i>", "data-toggle" => "checkbox-x", "data-three-state" => "false", "data-size" => "xl"
          = f.hidden_field :table_name, value: "images"
          -#
            %div{:class => "col-sm-10"}
              = f.label "Search table", :class => "control-label"
              %br/
              = f.select :table_name, ["images", "shipments"], {}, {:class => "form-control input-lg"}

      %div.panel.panel-default
        %div.panel-heading
          Device Group
        %ul.list-group
          %li.list-group-item
            .row.form-group
              %div{:class => "col-sm-10"}
                = f.select :device_group_id, options_from_collection_for_select(current_company.device_groups, :id, :DeviceGroupName, @user_setting.device_group_id), {:include_blank => 'None'}, {:class => "form-control input-lg"}


      = button_tag(:type => 'submit', :class => 'btn btn-primary btn-lg btn-block', id: 'save_button', name: 'save', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Update"}, autocomplete: "off") do
        Update