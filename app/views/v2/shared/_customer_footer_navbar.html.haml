.navbar.navbar-default.navbar-fixed-bottom{ role: 'navigation'}
  .container-fluid
    .navbar-header
      %div{class: 'navbar-brand navbar-center'}
        .col-xs-4.col-sm-4
          %a{href: root_path}
            %i.fa.fa-home.fa-lg
            = "Home" unless mobile_device?
        .col-xs-4.col-sm-4
          %a{href: "#upload_form", "data-toggle" => "modal", :alt => "new_image_file_form"}
            %i.fa.fa-camera.fa-lg
            = "Pictures" unless mobile_device?
        .col-xs-4.col-sm-4
          %a{href: create_ticket_v2_customer_path(@customer.id), class: "customer_button", data: {disable_with: "<i class='fa fa-spinner fa-spin fa-lg'></i>#{mobile_device? ? '' : ' Ticket'}"} }
            %i.fa.fa-ticket.fa-lg
            = Ticket unless mobile_device?

= render partial: "v2/cust_pic_files/upload_modal"
