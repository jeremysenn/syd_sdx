.navbar.navbar-default.navbar-fixed-bottom{ role: 'navigation'}
  .container-fluid
    .navbar-header
      %div{class: 'navbar-brand navbar-center'}
        .col-xs-4.col-sm-4
          %div{class: "#{mobile_device? ? 'pull-left' : ''}"}
            %a{href: "#", "data-toggle" => "modal", :alt => "vehicle"}
              %i.fa.fa-car.fa-lg
              = "Vehicle" unless mobile_device?
            - current_user.finger_print_reader_devices.each do |finger_print_reader_device|
              %a{href: '#', class: 'finger_print_trigger', 'data-device-id' => finger_print_reader_device.id, 'data-ticket-number' => @ticket.ticket_number, 'data-yard-id' => current_yard_id, 'data-customer-name' => @ticket.customer.company, 'data-customer-id' => @ticket.customer.id }
                %i.fa.fa-hand-pointer-o.fa-lg
                %i.fa.fa-spinner.fa-lg.fa-spin{style: 'display:none;'}
                = "Reader" unless mobile_device?
        .col-xs-4.col-sm-4
          %a{href: "#ticket_#{@ticket.id}_upload_form", id: "ticket_#{@ticket.id}_picture_upload_modal_link", "data-toggle" => "modal", :alt => "new_image_file_form"}
            %i.fa.fa-camera.fa-lg
            = "Picture" unless mobile_device?
        .col-xs-4.col-sm-4
          %div{class: "#{mobile_device? ? 'pull-right' : ''}"}
            - unless current_user.signature_pad_devices.blank?
              - current_user.signature_pad_devices.each do |signature_pad_device|
                %a{href: '#', class: 'tud_signature_pad', 'data-device-id' => signature_pad_device.id, 'data-ticket-number' => @ticket.ticket_number, 'data-yard-id' => current_yard_id, 'data-customer-name' => @ticket.customer.company, 'data-customer-id' => @ticket.customer.id }
                  %i.fa.fa-pencil.fa-lg
                  %i.fa.fa-spinner.fa-lg.fa-spin{style: 'display:none;'}
                  = "Sign" unless mobile_device?
            - else
              %a{href: "#signature_form", "data-toggle" => "modal", :alt => "new_signature_form"}
                %i.fa.fa-pencil.fa-lg
                = "Sign" unless mobile_device?

%div#individual_ticket_upload= render partial: "v2/image_files/upload_modal", locals: {ticket: @ticket}
= render partial: "v2/#{current_user.user_setting.table_name.singularize}_files/signature_modal"