$('#pack_shipments').append('<%= j render "pack_shipment" %>');
$('#more_pack_shipments_spinner').hide();

<% if @pack_shipments.next_page %>
  $('a.load-more-pack-shipments').show();
  $('a.load-more-pack-shipments').attr('href', '<%= v2_pack_shipments_path status: @status, page: @pack_shipments.next_page %>');
<% else %>
  $(window).off('scroll');
  $('a.load-more-pack-shipments').attr('href', '#');
  $('a.reload-pack-shipments').show();
<% end %>