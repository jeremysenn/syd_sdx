= render partial: "v2/shared/navbars/show_pack_shipment_pictures_navbar", locals: {title: @pack_shipment.shipment_number}
- @title="Shipment: #{@pack_shipment.shipment_number} Pictures"

.jumbotron{style: 'background-color: #FFFFFF;'}
  .container
    %h3
      = "#{@customer.first_name} #{@customer.last_name}" unless @customer.blank?
      %p  
        %small
          = "Shipment #{@pack_shipment.shipment_number}"
          %br
          = "Pack List #{@pack_list.pack_list_number}" unless @pack_list.blank?
          %br
          = "#{@contract.contract_description}" unless @contract.blank?
          
    %ul.nav.nav-tabs
      %li.active
        %a{:href => "#shipment_pictures", :data => {:toggle => "tab"}}
          %i.fa.fa-photo.fa-lg
          - unless mobile_device?
            = "Pictures"
          - else
            %small Pictures
    .tab-content
      .tab-pane.active{:id => "shipment_pictures"}
        %br
        %div#shipment_images
        - unless @images_array.blank? and @inventory_tags_array.blank?
          %p
            %a.btn.btn-default{href: images_zip_pack_shipment_path(@pack_shipment.id)}
              %i.fa.fa-file-zip-o
              Zip
          - @images_array.each_slice(6) do |images|
            .row
              - images.each do |image|
                - unless current_user.customer? and image['HIDDEN'] == '1'
                  .col-xs-12.col-sm-2.col-md-2
                    .thumbnail
                      %a{href: shipment_path(image['CAPTURE_SEQ_NBR'], yard_id: @pack_shipment.yard_id), class: 'thumbnail'}
                        = image_tag(show_preview_image_shipment_path(image['CAPTURE_SEQ_NBR'], yard_id: @pack_shipment.yard_id), alt: image['CAPTURE_SEQ_NBR'], class: 'img-responsive')
                      .text-center
                        %small.text-muted= image['EVENT_CODE']
          - @inventory_tags_array.each_slice(6) do |inventory_tags|
            .row
              - inventory_tags.each do |inv_tag|
                .col-xs-12.col-sm-2.col-md-2
                  .thumbnail
                    %a{href: inv_tag_path(inv_tag['CAPTURE_SEQ_NBR']), class: 'thumbnail'}
                      = image_tag(show_preview_image_inv_tag_path(inv_tag['CAPTURE_SEQ_NBR']), alt: inv_tag['CAPTURE_SEQ_NBR'], class: 'img-responsive')
                    .text-center
                      %small.text-muted= inv_tag['EVENT_CODE']
        - else
          %p.lead No pictures found
      
= render partial: "v2/shared/shipment_footer_navbar", locals: {title: "Shipment"}