/ Modal
#upload_modal.modal.fade{"aria-labelledby" => "SuspectListLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4#myModalLabel.modal-title New Suspect List
      .modal-body
        = simple_form_for SuspectList.new do |f|
          = f.input :user_id, as: :hidden, :input_html => { :value => current_user.id }
          = f.input :company_id, as: :hidden, :input_html => { :value => current_user.company_id }
          = f.input :delimiter, as: :hidden, :input_html => { :value => 'comma' }
          .form-group
            = f.input :name, required: true, :input_html => { class: 'form-control', autofocus: true }
          .form-group
            = f.input :table, as: :radio_buttons, collection: [['images', 'Images'], ['shipments', 'Shipment']], checked: 'images', label_method: :second, value_method: :first
          =# f.label :file, "<i class='fa fa-upload fa-2x text-primary'></i> --Choose CSV--".html_safe, :class => "control-label"
          =# f.file_field :file, class: 'form-control-file', onchange: "PreviewCSV();", required: true
          .form-group
            = f.input :file, as: :file, required: true, :input_html => { class: 'form-control' }
          .modal-footer
            %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
            %button.btn.btn-primary{:type => "submit", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Save"}} Save


