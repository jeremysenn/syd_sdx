- if not logged_in?
  -#
    .jumbotron{style: 'margin-left: 0; margin-right: 0; background-color: white;'}
  -#
    #home-page-carousel.carousel.slide{"data-ride" => "carousel"}
      / Indicators
      %ol.carousel-indicators
        %li.active{"data-slide-to" => "0", "data-target" => "#home-page-carousel"}
        %li{"data-slide-to" => "1", "data-target" => "#home-page-carousel"}
        %li{"data-slide-to" => "2", "data-target" => "#home-page-carousel"}
      / Wrapper for slides
      .carousel-inner{:role => "listbox"}
        .item.active
          %img{:alt => "...", :src => "..."}/
          .carousel-caption
            \...
        .item
          %img{:alt => "...", :src => "..."}/
          .carousel-caption
            \...
        \...
      / Controls
      %a.left.carousel-control{"data-slide" => "prev", :href => "#home-page-carousel", :role => "button"}
        %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
        %span.sr-only Previous
      %a.right.carousel-control{"data-slide" => "next", :href => "#home-page-carousel", :role => "button"}
        %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
        %span.sr-only Next
  .jumbotron
    .container
      %h3.text-center SYD SDX
      %p.text-center Scrap Yard Dog with Scrap Dragon Xtreme
      %div.text-center
        %p
          %a{href: signup_path, class: 'btn btn-lg btn-primary', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sign Up"}}
            %i.fa.fa-lock
            Sign Up
          %a{href: login_path, class: 'btn btn-lg btn-default', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Log In"}}
            %i.fa.fa-lock
            Log In
- else
  .jumbotron{style: 'background-color: #FFFFFF;'}
    .container
      - unless current_yard_id.blank?
        -#
          .well
            %p 
              Current Yard:
              = current_yard.blank? ? 'None' : current_yard['Name']
            %p
              Current Yard ID:
              = current_yard_id.blank? ? 'None' : current_yard_id
      - else
        %p Select a Yard
        - Yard.all(current_token).each do |yard|
          %div.row
            .col-xs-12.col-sm-12.col-md-12
              %div.panel.panel-primary
                %div.list_group
                  %a{href: yard_path(yard['Id']), class: "list-group-item yard_button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> #{yard['Name']}"}}
                    = yard["Name"]
                    .pull-right
                      %i.fa.fa-chevron-right.fa-lg
      - unless current_yard.blank?
        %div.row
          %p
            .col-xs-12
              %a.btn.btn-primary.btn-lg.btn-block{:href => customers_path,  class: 'welcome_button', :role => "button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Customers"}} 
                %i.fa.fa-users.fa-lg
                Customers
        %div.row
          %p
            .col-xs-12
              %a.btn.btn-primary.btn-lg.btn-block{:href => tickets_path(status: 2),  class: 'welcome_button', :role => "button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Held"}} 
                %i.fa.fa-folder-open-o.fa-lg
                Held
        %div.row
          %p
            .col-xs-12
              %a.btn.btn-primary.btn-lg.btn-block{:href => tickets_path(status: 1),  class: 'welcome_button', :role => "button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Closed"}} 
                %i.fa.fa-folder.fa-lg
                Closed
        %div.row
          %p
            .col-xs-6
              %a.btn.btn-default.btn-lg.btn-block{:href => tickets_path(status: 3),  class: 'welcome_button', :role => "button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Paid"}} 
                %i.fa.fa-dollar.fa-lg
                Paid
            .col-xs-6
              %a.btn.btn-default.btn-lg.btn-block{:href => commodities_path,  class: 'welcome_button', :role => "button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Commodities"}} 
                %i.fa.fa-th-list.fa-lg
                Commodities