- if not logged_in?
  .jumbotron
    .container
      %h3.text-center SYD SDX
      %p.text-center Scrap Yard Dog with Scrap Dragon Xtreme
      %div.text-center
        %p
          %a{href: signup_path, class: 'btn btn-lg btn-primary', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sign Up"}}
            %i.fa.fa-lock
            Sign Up
          %a{href: login_path, class: 'btn btn-lg btn-default', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Log In"}}
            %i.fa.fa-lock
            Log In
- else
  .jumbotron
    .container
      %p.text-center Customer Portal
      %div.text-center
        %p
          %a{href: images_path, class: 'btn btn-lg btn-primary welcome_button',  data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Pictures"}}
            Pictures
          %a{href: tickets_path(status: 3), class: 'btn btn-lg btn-primary welcome_button',  data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Tickets"}}
            Tickets