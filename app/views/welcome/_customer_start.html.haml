- if not logged_in?
  .jumbotron{style: 'background-color: white;'}
    .container
      %h3.text-center SCRAP DRAGON PORTAL
      %div.text-center
        %p
          %a{href: signup_path, class: 'btn btn-lg btn-primary', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sign Up"}}
            %i.fa.fa-lock
            Sign Up
          %a{href: login_path, class: 'btn btn-lg btn-default', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Log In"}}
            %i.fa.fa-lock
            Log In
- else
  .jumbotron{style: 'background-color: white;'}
    .container
      %div.row
        .col-sm-6.col-md-4.col-md-offset-4
          - unless current_user.company.logo.file.nil?
            = image_tag(current_user.company.logo.url, alt: 'company_logo', class: 'img-responsive center-block')
          - else
            = image_tag('dragon_logo_small.png', alt: 'dragon_logo.png', class: 'img-responsive center-block')
      -#
        %p
          =# image_tag('sd_portal_transparent_small.png', alt: 'sd_portal_transparent_small.png', class: 'img-responsive center-block')
          .col-sm-6.col-md-4.col-md-offset-4
            = image_tag('dragon_logo.png', alt: 'dragon_logo.png', class: 'img-responsive center-block')
      %div.row
        %p
          .col-xs-6
            %a.btn.btn-default.btn-lg.btn-block{:href => tickets_reports_path,  class: 'welcome_button', :role => "button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sold"}} 
              %i.fa.fa-list-alt.fa-lg
              Sold
        %p
          .col-xs-6
            %a.btn.btn-default.btn-lg.btn-block{:href => shipments_reports_path,  class: 'welcome_button', :role => "button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Purchased"}} 
              %i.fa.fa-list-alt.fa-lg
              Purchased
      %div.row
        %p
          .col-xs-6
            %a.btn.btn-default.btn-lg.btn-block{:href => customer_index_commodities_path,  class: 'welcome_button', :role => "button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Price List"}} 
              %i.fa.fa-list.fa-lg
              Price List
        %p
          .col-xs-6
            %a.btn.btn-default.btn-lg.btn-block{:href => '#',  class: 'welcome_button', :role => "button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Contracts"}} 
              %i.fa.fa-list.fa-lg
              Contracts
      %div.row
        %p
          .col-sm-6.col-md-4.col-md-offset-4
            %a.btn.btn-default.btn-lg.btn-block{:href => service_requests_customers_path,  class: 'welcome_button', :role => "button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Service Requests"}} 
              %i.fa.fa-truck.fa-lg
              Service Requests
        