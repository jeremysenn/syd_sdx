.jumbotron{style: 'background: white;'}
  .container
    .col-sm-6.col-md-4.col-md-offset-4
      = form_for @user, :url => password_reset_path(params[:id]), :class => "form-horizontal" do |f|
        %div.form-group
          =# f.label 'New password', :class => "control-label"
          = f.password_field :password, :class => "form-control input-lg", placeholder: "New Password", required: true
        -#
          %div.form-group.has-feedback{:class => "col-xs-8"}
            = f.label :password_confirmation, :class => "control-label"
            = f.password_field :password_confirmation, :class => "form-control input-lg", placeholder: "Password Confirmation", required: true
        %div.form-group
          = button_tag(:type => 'submit', :class => 'btn btn-primary btn-lg btn-block', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Reset Password"}) do
            Reset Password