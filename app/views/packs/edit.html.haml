=# render partial: "shared/navbars/new_and_edit_pack_navbar", locals: {title: @pack["PrintDescription"]}
- @title="Edit pack list"

.container
  %br
  %br
  .col-sm-6.col-md-4.col-md-offset-4
    = form_tag pack_path(id: @pack["Id"]), method: 'put', :class => "form-horizontal" do
      = hidden_field_tag "pack[yard]", @pack["Yard"]
      = hidden_field_tag "pack[id]", @pack["Id"]
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = label_tag "Print Description", nil, :class => 'control-label'
          = text_field_tag "pack[description]", @pack["PrintDescription"], :placeholder => "Description", class: "form-control input-lg", required: true
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = label_tag "Inventory Code", nil, :class => 'control-label'
          = text_field_tag "pack[InventoryCode]", @pack["InventoryCode"], :placeholder => "Inventory Code", class: "form-control input-lg", required: true
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = label_tag "Internal Pack Number", nil, :class => 'control-label'
          = text_field_tag "pack[InternalPackNumber]", @pack["InternalPackNumber"], :placeholder => "Internal Pack Number", class: "form-control input-lg", required: true
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = label_tag "Tag Number", nil, :class => 'control-label'
          = text_field_tag "pack[TagNumber]", @pack["TagNumber"], :placeholder => "Tag Number", class: "form-control input-lg", required: true
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = label_tag "Unit of Measure", nil, :class => 'control-label'
          = select_tag "pack[unit_of_measure]", options_for_select(units_of_measure, @pack["UnitOfMeasure"]), prompt: 'Select unit of measure', class: "form-control input-lg", required: true
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = label_tag "Quantity", nil, :class => 'control-label'
          = text_field_tag "pack[quantity]", @pack["Quantity"], :placeholder => "Quantity", class: "form-control input-lg", required: true
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = label_tag "Net", nil, :class => 'control-label'
          = text_field_tag "pack[net]", @pack["NetWeight"], :placeholder => "Net", class: "form-control input-lg", required: true
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = button_tag(:type => 'submit', :class => 'btn btn-primary btn-lg btn-block', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Create"}) do
            Save

